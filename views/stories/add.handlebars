<h1>Add Story</h1>

<div class="row">
	<form action="/stories" class="col s12" method="POST">
		<div class="input input-field">
			<input type="text" name="title" required>
			<label for="title">Title</label>
		</div>

		<div class="input">
			<label for="status">Status</label>
			<select name="status" required>
				<option selected value="public">Public</option>
				<option value="private">Private</option>
				<option value="unpublished">Unpublished</option>
			</select>
		</div>

		<div class="input">
			<label for="allowComments">Allow Comments: </label>
			<input type="checkbox" class="filled-in" name="allowComments" />
		</div>

		<div class="input">
			<h5>Tell Us Your Story: </h5>
			<br>
			<textarea id="story-body" name="body"></textarea>
		</div>

		<div class="input input-field">
			<textarea name="summary" id="" rows="1" required></textarea>
			<label for="summary">Summary</label>
		</div>

		<div>
			<input class="btn btn-secondary" type="submit" value="Save">
		</div>

	</form>
</div>
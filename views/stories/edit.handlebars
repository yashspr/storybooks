<h1>Edit story</h1>

<div class="row">
	<form action="/stories/{{story.id}}?_method=PUT" class="col s12" method="POST">
		<div class="input input-field">
			<input type="text" name="title" title="Title must have atleast 10 characters" value="{{story.title}}"
				required>
			<label for="title">Title</label>
		</div>

		<div class="input">
			<label for="status">Status</label>
			<select name="status">
				{{#select story.status}}
					<option selected value="public">Public</option>
					<option value="private">Private</option>
					<option value="unpublished">Unpublished</option>
				{{/select}}
			</select>
		</div>

		<div class="input">
			<label>Allow Comments:</label>
			<input type="checkbox" class="filled-in" name="allowComments" {{#if story.allowComments}} checked="checked"
				{{/if}} />
		</div>

		<div class="input">
			<h5>Tell Us Your Story: </h5>
			<br>
			<textarea id="story-body" name="body">
			{{story.body}}
			</textarea>
		</div>

		<div class="input input-field">
			<textarea name="summary" id="" rows="1" required>{{story.summary}}</textarea>
			<label for="summary">Summary</label>
		</div>

		<div class="row">
			<input class="btn btn-secondary" type="submit" value="Save">
		</div>

	</form>
</div>